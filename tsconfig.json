{
    "compilerOptions": {
        "incremental": true,
        "target": "es2016",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "composite": true,
        "downlevelIteration": true,
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*.test.ts"
    ]
}
